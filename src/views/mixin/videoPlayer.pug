mixin videoPlayer(video={})
    .videoplayer#jsvideoPlayer
        video(src=video.src)#videoBody
        .videoplayer__playhover
            i.fas.fa-play
        .videoplayer__controls
            .videoplayer__column
                .videoplayer__volume
                    span#videoVolButton
                        i.fas.fa-volume-up
                    input#videoVolume(type="range", min="0", max="1", step="0.1" value="0.5")
                .videotime
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoplayer__column
                span#videoPlayButton
                    i.fas.fa-play
            .videoplayer__column
                span#videoScreenBtn
                    i.fas.fa-expand