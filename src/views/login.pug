extends layouts/main

block content
    .form-container
        form(action=routes.login, autocomplate="off", method="post")
            input(type="email", name="email", placeholder="이메일", required=true)
            input(type="password", name="password", autocomplete="new-password", placeholder="비밀번호", required=true)
            input(type="submit", value="로그인")
        include ./partials/socialLogin
