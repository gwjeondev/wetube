include ../mixin/flashMessage

<!DOCTYPE html>
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(name="author", content="jeongeunwon")
        meta(name="description" content="youtube cloneing")
        meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, maximum-scale=1, minimum-scale=1")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="icon", href="https://raw.githubusercontent.com/won-developer/img/master/wetube_favicon.png")
        link(rel="stylesheet", href="/static/styles.css")
        script(src="https://kit.fontawesome.com/b6783caecc.js", crossorigin="anonymous")
        title #{pageTitle} | #{siteName}
    body
        if messages.info
            +flashMessage({
                type: "info",
                text: messages.info
                })
        else if messages.error
            +flashMessage({
                type: "error",
                text: messages.error
            })
        else if messages.success
            +flashMessage({
                type: "success",
                text: messages.success
            })
        include ../partials/header
        main#main
            block content
        include ../partials/footer
        script(src="/static/main.js")