extends layouts/main

block content
    .form-container
        form(action=`${routes.users}${routes.editProfile}`, method="post" enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") 프로필 사진
                input(type="file", id="avatar", name="avatar" accept="image/*")
            input(type="text", placeholder="이름", name="name", value=loggedUser.name)
            input(type="submit" value="업데이트")