extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(videos.id), method="post")
            input(type="text", placeholder="제목", name="title" value=videos.title)
            textarea(name="description" placeholder="내용")=videos.description
            input(type="submit" value="Update Video")
        a.form-container__link(href=routes.deleteVideo(videos.id))
            button.delete Delete Video 