extends layouts/main

block content
    .video-detail__container
        .video__player
            video(src=`/${videos.fileUrl}`, controls=true)
        .video__info
            a(href=routes.editVideo(videos.id)) 
                button Edit Video
            h5.video__title=videos.title
            p.video__description=videos.description
            if videos.views === 1 
                span.video__views 1 view
            else
                span.video__views #{videos.views} views

        .video__comments
            if videos.comments.length === 1
                span.video__comment-number 1 comment
            else
                span.video__comment-number #{videos.comments.length} comments
