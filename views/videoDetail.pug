extends layouts/main

block content
    .video__player
        video(src=`/${videos.fileUrl}`, controls=true)
    .video__info
        a(href=routes.editVideo(videos.id)) Edit Video
        h5.video__title=videos.title
        span.video__views=videos.views
        p.video__description=videos.description
    .video__comments
        if videos.comments.length === 1
            span.video__comment-number 1 comment
        else
            span.video__comment-number #{videos.comments.length} comments
